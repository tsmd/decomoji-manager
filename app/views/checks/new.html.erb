<% content_for(:html_title) { "チェックを作成" } %>

<h2 class="mt-12 mb-4">チェックを作成</h2>

<%= form_with model: @check, url: checks_path do |form| %>
  <p class="field">
    <%= form.label :name, "チェック名" %>
    <%= form.text_field :name, required: true %>
    <%= form.submit "作成" %>
  </p>

  <% @decomoji_ids.each do |decomoji_id| %>
    <%= hidden_field_tag 'ids[]', decomoji_id %>
  <% end %>

  <div class="h-4"></div>

  <p class="mb-2"><%= @decomoji_ids.size %>件のデコモジを選択中</p>
  <ul class="grid grid-cols-[repeat(auto-fill,4rem)] gap-2">
    <% @decomojis.each do |decomoji| %>
      <%= render 'decomoji', decomoji: decomoji %>
    <% end %>
  </ul>
<% end %>
